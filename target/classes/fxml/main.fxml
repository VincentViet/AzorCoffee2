<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azor.main.MainView">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <JFXTabPane prefHeight="810.0" prefWidth="1280.0" side="LEFT">
               <tabs>
                  <Tab>
                    <content>
                        <VBox fx:id="homeTab" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
                    </content>
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" rotate="90.0">
                           <image>
                              <Image url="@../image/home.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
                  <Tab>
                    <content>
                        <VBox fx:id="userTab" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
                    </content>
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" rotate="90.0">
                           <image>
                              <Image url="@../image/user.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
                  <Tab>
                    <content>
                        <VBox fx:id="tasksTab" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
                    </content>
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" rotate="90.0">
                           <image>
                              <Image url="@../image/tasks.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
                  <Tab>
                    <content>
                        <VBox fx:id="chartTab" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
                    </content>
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" rotate="90.0">
                           <image>
                              <Image url="@../image/chart.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Tab>
               </tabs>
            </JFXTabPane>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #6C757D;" BorderPane.alignment="CENTER">
         <children>
            <FontAwesomeIconView glyphName="MINUS" onMouseClicked="#onMinimize" size="1.5em" style="-fx-cursor: hand;">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </FontAwesomeIconView>
            <FontAwesomeIconView glyphName="CLOSE" onMouseClicked="#onClose" size="1.5em" style="-fx-cursor: hand;">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </FontAwesomeIconView>
         </children>
      </HBox>
   </top>
</BorderPane>
